package client;

import tv.Tv;
import tv.TvFactory;

class Client {
	
	private TvFactory factory;
	
	public Client(TvFactory factory) {
		this.factory = factory;
	}
	
	public void watchTv() {
		// Get a TV
		Tv tv = factory.getTv();
		// Put it on
		tv.on();
		// Print the current channel
		System.out.println("Watching channel " + tv.channel());
	}
	
	public void setTvFactory(TvFactory factory) {
		this.factory = factory;
	}

}
